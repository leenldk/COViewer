<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".news_body_fragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="30dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/expert_body_image"
            android:layout_width="123dp"
            android:layout_height="128dp"
            android:layout_margin="10dp"></ImageView>

        <TextView
            android:id="@+id/expert_body_name"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="example content"></TextView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="bio text"
        android:id="@+id/expert_body_bio"/>
    
</androidx.appcompat.widget.LinearLayoutCompat>