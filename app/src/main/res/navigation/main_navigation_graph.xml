<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation_graph"
    app:startDestination="@id/news_main_fragment">

    <fragment
        android:id="@+id/news_main_fragment"
        android:name="com.example.coviewer.news_main_fragment"
        android:label="fragment_news_main_fragment"
        tools:layout="@layout/news_main_fragment" >
        <action
            android:id="@+id/action_view_news_body"
            app:destination="@id/news_body_fragment" />
    </fragment>
    <fragment
        android:id="@+id/data_main_fragment"
        android:name="com.example.coviewer.data_main_fragment"
        android:label="fragment_data_main_fragment"
        tools:layout="@layout/data_main_fragment" />
    <fragment
        android:id="@+id/news_body_fragment"
        android:name="com.example.coviewer.news_body_fragment"
        android:label="news_body_fragment"
        tools:layout="@layout/news_body_fragment" >
        <argument
            android:name="news"
            app:argType="com.example.coviewer.network.News" />
    </fragment>
    <fragment
        android:id="@+id/graph_main_fragment"
        android:name="com.example.coviewer.graph_main_fragment"
        android:label="fragment_graph_main_fragment"
        tools:layout="@layout/graph_main_fragment" >
    </fragment>
</navigation>